extends layout

block content
  h1(class='my-3 text-5xl font-bold')= title
  p(class='mb-3') Welcome to #{title}
  button(class='bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded')
    a(href='/new') Send a message

  ul
    each message in messages
      li(class='my-4 p-3 bg-gray-100 rounded-md shadow-md w-96')
        p(class='font-bold mb-1') #{message.user}
        p #{message.text}
        p(class='text-xs mt-2') #{message.added}